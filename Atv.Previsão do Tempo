<body>
    <h1>Previsão do Tempo</h1>
    <form id="formClima">
        <label for="temperatura">Temperatura :</label>
        <input type="number" id="temperatura" required>
        
        <label for="probabilidadeChuva">Probabilidade de Chuva:</label>
        <input type="number" id="probabilidadeChuva" required>
        
        <button type="submit">Ver Previsão</button>

    </form>

     <h2>Imagem do Tempo</h2>
    <img id="imagem" src="" alt="Previsão do Tempo">




    <script>
        const form = document.getElementById("formClima");
        const imagem = document.getElementById("imagem");

        form.addEventListener("submit", function(event) {
            event.preventDefault(); // impede o reload da página
            const temperatura = parseFloat(document.getElementById("temperatura").value);
            const probabilidadeChuva = parseFloat(document.getElementById("probabilidadeChuva").value);

            if (temperatura > 20 && probabilidadeChuva < 30) {                                       
            } else if (temperatura > 20 && probabilidadeChuva >= 30) {
                imagem.src = "https://upload.wikimedia.org/wikipedia/commons/thumb/8/8d/Thin_Cirrus_Clouds.jpg/250px-Thin_Cirrus_Clouds.jpg"                                               
            } else if (temperatura <= 20 && temperatura > 0 && probabilidadeChuva >= 70) {
                imagem.src = "https://upload.wikimedia.org/wikipedia/commons/thumb/f/f1/Praia_de_Joanes_Ilha_do_Marajo.jpg/250px-Praia_de_Joanes_Ilha_do_Marajo.jpg"
     
            }
        });
    </script>
